@model EditLotViewModel

@{
    ViewData["Title"] = Model.Name;
}

<div class="container">
    <div class="row justify-content-center">
        @if (!string.IsNullOrWhiteSpace(ViewBag.RejectNote))
        {
            <div class="col-md-10">
                <div class="mt-3 alert alert-danger rounded-0" role="alert">
                    @ViewBag.RejectNote
                </div>
            </div>
        }
        <div class="col-md-10">
            <div class="card my-3 rounded-0">
                <div class="card-body">
                    <h5 class="card-title text-center my-3">Редактирование лота</h5>
                    <form method="post" asp-action="EditLot" asp-controller="User" enctype="multipart/form-data">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <input asp-for="Id" hidden />
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control rounded-0">
                            <div class="form-text">Не более 150 символов</div>
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>
                        <input asp-for="OldName" hidden />
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control rounded-0" rows="3"></textarea>
                            <div class="form-text">Не более 500 символов</div>
                            <span class="text-danger" asp-validation-for="Description"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="StartPrice" class="form-label"></label>
                            <input asp-for="StartPrice" class="form-control rounded-0" type="number" min="0">
                            <span class="text-danger" asp-validation-for="StartPrice"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="BidStep" class="form-label"></label>
                            <input asp-for="BidStep" class="form-control rounded-0" type="number" min="0">
                            <span class="text-danger" asp-validation-for="BidStep"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="StartDate" class="form-label"></label>
                            <input asp-for="StartDate" class="form-control rounded-0" type="date" min="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")">
                            <span class="text-danger" asp-validation-for="StartDate"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="EndDate" class="form-label"></label>
                            <input asp-for="EndDate" class="form-control rounded-0" type="date" min="@DateTime.Now.AddDays(2).ToString("yyyy-MM-dd")">
                            <span class="text-danger" asp-validation-for="EndDate"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Photo" class="form-label"></label>
                            <input asp-for="Photo" class="form-control rounded-0" type="file" accept=".png, .jpeg, image/jpeg, image/pjpeg, image/png">
                            <div class="form-text">Файл размером до 5 Мегабайт в одном из форматов: .jpeg .jpg .png</div>
                            <span class="text-danger" asp-validation-for="Photo"></span>
                        </div>
                        <input asp-for="OldPhotoSrc" hidden />
                        <div class="d-grid">
                            <button type="submit" class="btn btn-lg btn-dark rounded-0">Сохранить и отправить на проверку</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
