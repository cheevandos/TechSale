@model WebApplicationTechSale.Models.ChangePasswordViewModel

@{
    ViewBag.Title = "Изменение пароля";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card my-3 rounded-0">
            <div class="card-body">
                <h5 class="card-title text-center my-3">Изменение пароля</h5>
                <form method="post" asp-action="ChangePassword" asp-controller="Account">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <div class="mb-3">
                        <label asp-for="OldPassword" class="form-label"></label>
                        <input asp-for="OldPassword" class="form-control rounded-0">
                        <span class="text-danger" asp-validation-for="OldPassword"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="NewPassword" class="form-label"></label>
                        <input asp-for="NewPassword" class="form-control rounded-0">
                        <span class="text-danger" asp-validation-for="NewPassword"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="NewPasswordConfirmation" class="form-label"></label>
                        <input asp-for="NewPasswordConfirmation" class="form-control rounded-0">
                        <span class="text-danger" asp-validation-for="NewPasswordConfirmation"></span>
                    </div>
                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-lg btn-dark rounded-0">Сохранить изменения</button>
                    </div>
                    <div class="my-2">
                        <a asp-action="Personal" asp-controller="Account" class="btn btn-lg btn-secondary d-block rounded-0">Вернуться в личный кабинет</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>