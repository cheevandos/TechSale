@model WebApplicationTechSale.Models.LoginViewModel

<div class="container col-sm-10 offset-sm-1 col-md-6 offset-md-3 col-xl-4 offset-xl-4 col-12">
    <div class="card my-4">
        <div class="card-body">
            <a class="btn btn-outline-info btn-block" asp-action="Index" asp-controller="Home">Вернуться&nbsp;на&nbsp;главную</a>
            <h5 class="text-center my-4">Выполните вход в&nbsp;учетную&nbsp;запись</h5>
            <form method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control">
                </div>
                <div class="form-group">
                    <div class="form-check">
                        <input asp-for="RememberMe" class="form-check-input">
                        <label asp-for="RememberMe" class="form-check-label"></label>
                    </div>
                </div>
                <button type="submit" class="btn btn-secondary btn-block btn-lg">Войти</button>
            </form>
            <h5 class="text-center my-4">Или&nbsp;создайте&nbsp;новую</h5>
            <a class="btn btn-dark btn-block btn-lg" asp-action="Register" asp-controller="Account">Создать учетную запись</a>
        </div>
    </div>
</div>
