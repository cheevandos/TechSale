@model WebApplicationTechSale.Models.LoginViewModel

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card my-3">
            <div class="card-body">
                <h5 class="card-title text-center my-3">Выполните вход в&nbsp;учетную&nbsp;запись</h5>
                <form method="post" asp-action="Login" asp-controller="Account">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Адрес электронной почты</label>
                        <input asp-for="Email" class="form-control">
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Пароль</label>
                        <input asp-for="Password" class="form-control">
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                    <div class="form-check mb-3">
                        <label asp-for="RememberMe" class="form-check-label"></label>
                        <input asp-for="RememberMe" class="form-check-input">
                    </div>
                    <div>
                        <input asp-for="ReturnUrl" value="@Model.ReturnUrl" hidden/>
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-dark">Войти в учетную запись</button>
                    </div>
                </form>
                <h5 class="my-3">Еще не зарегистрированы?</h5>
                <a class="btn btn-secondary" asp-action="Register" asp-controller="Account">Создать учетную запись</a>
            </div>
        </div>
    </div>
</div>
